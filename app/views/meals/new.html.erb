<!-- Validation failure messages -->

<% if @meal.errors.any? %>
  <% @meal.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Meal</h3>
      </div>
      <div class="panel-body">
        <form action="/create_meal" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for date -->
          <div class="form-group">
            <label for="date" class="col-sm-2 control-label">
              Date
            </label>
            <div class="col-sm-10">
              <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @meal.date %>">
            </div>
          </div>

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Meal Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @meal.name %>">
            </div>
          </div>

          <!-- Label and input for category -->
          <div class="form-group">
            <label for="category" class="col-sm-2 control-label">
              Meal Type
            </label>
            <div class="col-sm-10">
              <input type="text" id="category" name="category" placeholder="Category" class="form-control" value="<%= @meal.category %>">
            </div>
          </div>

          <!-- Label and input for calportion -->
          <div class="form-group">
            <label for="calportion" class="col-sm-2 control-label">
              Calories per Portion
            </label>
            <div class="col-sm-10">
              <input type="text" id="calportion" name="calportion" placeholder="Calportion" class="form-control" value="<%= @meal.calportion %>">
            </div>
          </div>

          <!-- Label and input for numportions -->
          <div class="form-group">
            <label for="numportions" class="col-sm-2 control-label">
              # of Portions
            </label>
            <div class="col-sm-10">
              <input type="text" id="numportions" name="numportions" placeholder="Numportions" class="form-control" value="<%= @meal.numportions %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Enter Meal
              </button>
              or
              <a href="/meals">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
