<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Meal #<%= @meal.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">

              <dt>Profile</dt>
              <dd><%= @meal.profile_id %></dd>

              <dt>Date</dt>
              <dd><%= @meal.date %></dd>

              <dt>Meal Name</dt>
              <dd><%= @meal.name %></dd>

              <dt>Meal Type</dt>
              <dd><%= @meal.category %></dd>

              <dt>Calories per Portion</dt>
              <dd><%= @meal.calportion %></dd>

              <dt># of Portions</dt>
              <dd><%= @meal.numportions %></dd>



            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/meals" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <% if @meal.profile_id == current_user.id %>

              <a href="/meals/<%= @meal.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_meal/<%= @meal.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
