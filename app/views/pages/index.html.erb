<div class="container">
    <div class="row energysummary-report">
        <div class="col-md-6">
          <h1> Daily-E summary </h1>
          <div> <h2>E-needed:<%= @benchmarkcals.round %> Calories</h2> </div>
          <div> <h2>E-consumed: <%= @meals.map(&:total_calories).reduce(:+) %> Calories</h2></div>
          <div> <h2>E-burned: <%= @activities.map(&:calburned).reduce(:+) %> Calories</h2></div>
          <% if @meals.map(&:total_calories).reduce(:+) - @activities.map(&:calburned).reduce(:+) - @benchmarkcals > 0   %>
            <div><h2> You are <%= (@meals.map(&:total_calories).reduce(:+) - @activities.map(&:calburned).reduce(:+)- @benchmarkcals).round %> Calories <strong>OVER</strong> </h2></div>
            <div><h3>Stop staring at me and GO WORKOUT!</h3></div>
            <% else %>
            <div><h2> You are <%= (@meals.map(&:total_calories).reduce(:+) - @activities.map(&:calburned).reduce(:+) - @benchmarkcals)*(-1).round %> Calories <strong>UNDER</strong>.</h2></div>
            <div><h3>Better eat something!</h3></div>
          <% end %>
          <div> <h2>Your personal goal is:<%=@current_user.weightgoal%></h2> </div>

        </div>
        <div class="col-md-6">
          <h1> Your weekly progress </h1>
          <div> [insert chart here]</div>
        </div>
    </div>
    <div class="row meals-actvitites">
        <div class="col-md-6">
          <h1> Meals </h1>
          <% @meals.each do |meal| %>
            <div>
              <h4>
            <%= meal.date %> <%= meal.category %> -- <%= meal.name %> -- <%= meal.total_calories %> Cals.
              </h4>
            </div>

          <% end %>
        </div>

        <div class="col-md-6">
          <h1> Activities </h1>
          <div>
            <h4>
          <% @activities.each do |activity| %>
            <%= activity.date %> <%= activity.category %> -- <%= activity.name %> -- <%= activity.calburned %> Cals.
            </h4>
          </div>
          <% end %>
        </div>
    </div>
</div>
